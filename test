#!/usr/bin/python#
import os
import io
from google.cloud.vision import types
from google.cloud import vision

client = vision.ImageAnnotatorClient()

file_name = os.path.join(os.path.dirname('/home/lxy/GitHub/EC601-Project1/images/mini.jpg'),'mini.jpg')
with io.open(file_name, 'rb') as image:
    content = image.read()
pictures = types.Image(content = content)
response = client.label_detection(image=pictures)
labels = response.label_annotations
print('Labels:')
for label in labels:
    print(label.description)
        
